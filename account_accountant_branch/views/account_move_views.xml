<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Account move view form -->
        <record id="view_move_form" model="ir.ui.view">
            <field name="name">Inherited move</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="branch_id" options="{'no_create':True,'no_open':True}" required="1"/>
                </xpath>

                <xpath expr="//button[@name='button_cancel'][1]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//button[@name='button_cancel'][2]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//notebook/page/field[@name='line_ids']/tree/field[@name='company_currency_id']"
                       position="after">
                    <field name="branch_id" options="{'no_create':True,'no_open':True}"/>
                </xpath>
            </field>
        </record>

        <!-- Account move tree -->
        <record id="view_move_tree" model="ir.ui.view">
            <field name="name">account.move.tree</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='name']" position="after">
                    <field name="branch_id"/>
                </xpath>

            </field>
        </record>

        <!-- Account invoice tree -->
        <record id="view_invoice_tree" model="ir.ui.view">
            <field name="name">account.move.tree</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='name']" position="after">
                    <field name="branch_id"/>
                </xpath>

            </field>
        </record>

        <!-- Account move line tree -->
        <record id="view_move_line_tree" model="ir.ui.view">
            <field name="name">account.move.line.tree</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree"/>
            <field eval="100" name="priority"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="branch_id"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
