<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit res users form -->
        <record id="view_res_users_inherit" model="ir.ui.view">
            <field name="name">Inherited Users</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base_branch.view_res_users_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='see_other_group']" position="inside">
                    <field name="allowed_see_other_assets"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
