<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Account asset view form -->
        <record id="view_account_asset_form" model="ir.ui.view">
            <field name="name">account.asset.form</field>
            <field name="model">account.asset</field>
            <field name="inherit_id" ref="account_asset.view_account_asset_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="before">
                    <field name="branch_id" options="{'no_create':True,'no_open':True}" required="1"/>
                </xpath>
            </field>
        </record>

        <!-- Account asset tree -->
        <record id="view_account_asset_purchase_tree" model="ir.ui.view">
            <field name="name">account.asset.tree</field>
            <field name="model">account.asset</field>
            <field name="inherit_id" ref="account_asset.view_account_asset_purchase_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='acquisition_date']" position="after">
                    <field name="branch_id"/>
                </xpath>
            </field>
        </record>

        <!-- Account asset search -->
        <record id="view_account_asset_search" model="ir.ui.view">
            <field name="name">account.asset.search</field>
            <field name="model">account.asset</field>
            <field name="inherit_id" ref="account_asset.view_account_asset_search"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='first_depreciation_date']" position="after">
                    <field name="branch_id"/>
                </xpath>

                <xpath expr="//filter[@name='month']" position="after">
                    <filter string="Branch" name="branch" domain="[]" context="{'group_by':'branch_id'}"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
