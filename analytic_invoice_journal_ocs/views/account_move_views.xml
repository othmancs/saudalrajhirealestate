<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- إضافة الحقول التحليلية لنموذج الفاتورة -->
    <record id="view_invoice_form_inherit" model="ir.ui.view">
        <field name="name">account.move.form.inherit.analytic</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="analytic_account_id"/>
                <field name="analytic_tag_ids"/>
            </xpath>

            <!-- تعديل شجرة بنود الفاتورة لإظهار الحقول التحليلية -->
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_unit']" position="after">
                <field name="analytic_account_id"/>
                <field name="analytic_tag_ids"/>
            </xpath>
        </field>
    </record>

    <!-- إظهار الحقول التحليلية في شجرة بنود اليومية -->
    <record id="view_move_line_tree_inherit" model="ir.ui.view">
        <field name="name">account.move.line.tree.inherit.analytic</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='account_id']" position="after">
                <field name="analytic_account_id"/>
                <field name="analytic_tag_ids"/>
            </xpath>
        </field>
    </record>
</odoo>