<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_purchase_config_settings" model="ir.ui.view">
            <field name="name">Purchase Settings</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Purchase Requests"
                         data-key="plustech_purchase_request">
                        <h2>Agreements No.</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <h3>Agreements No.</h3>
                                    <div class="text-muted">
                                        Number of agreements
                                    </div>
                                    <div class="content-group">
                                        <div class="row mt8">
                                            <label for="agreement_no"  class="col-lg-5 o_light_label"/> 
                                            <field name="agreement_no"/>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    
                        
                    </xpath>
            </field>
        </record>

        <record id="action_purchase_request_config" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'plustech_purchase_request','bin_size': False}</field>
        </record>

        <menuitem id="menu_purchase_request_settings" name="Settings" parent="parent_menu_plustech_purchase_request"
                  action="action_purchase_request_config" sequence="50" groups="base.group_system"/>

    </data>
</odoo>