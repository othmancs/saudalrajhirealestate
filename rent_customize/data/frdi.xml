<odoo>
    <record id="report_frdi15" model="ir.actions.report">
        <field name="name">طلب تأجير فردي</field>
        <field name="model">rental.letter.template</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">rent_customize.report_frdi_raj_template</field>
        <field name="report_file">rent_customize.report_frdi_raj_template</field>
        <field name="binding_model_id" ref="model_rental_letter_template"/>
        <field name="binding_type">report</field>
    </record>
    <template id="report_frdi_raj_template">
        <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="o">
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="row">
                        <h1 align="center">طلب تأجير أفراد</h1>
                        <h3 align="right">بيانات العقار</h3>
                        <table align="center" class="table table-bordered"
                               style="width:100%;float: right; font-size:20px; border:2px solid black; margin-bottom:20px;" dir="rtl">
                            <tbody>
                                <tr style="height:18px;">
                                    <td style="height:18px; width:20%; border:2px solid black;">الموقع</td>
                                    <td style="height:18px; width:80%; border:2px solid black;"><span t-esc="o['location']"/></td>
                                </tr>
                                <tr style="height:18px;">
                                    <td style="height:18px; width:20%; border:2px solid black;">نوع العقار</td>
                                    <td style="height:18px; width:80%; border:2px solid black;"><span t-esc="o['property_type']"/></td>
                                </tr>
                                <tr style="height:18px;">
                                    <td style="height:18px; width:20%; border:2px solid black;">القيمة الايجارية السابقة</td>
                                    <td style="height:18px; width:80%; border:2px solid black;"><span t-esc="o['rental_value']"/></td>
                                </tr>
                                <tr style="height:18px;">
                                    <td style="height:18px; width:20%; border:2px solid black;">القيمة الايجارية المقترحة</td>
                                    <td style="height:18px; width:80%; border:2px solid black;"><span t-esc="o['new_rental_value']"/></td>
                                </tr>
                                <tr style="height:18px;">
                                    <td style="height:18px; width:20%; border:2px solid black;">اسباب التغيير</td>
                                    <td style="height:18px; width:80%; border:2px solid black;"><span t-esc="o['change_reason']"/></td>
                                </tr>
                            </tbody>
                        </table>

                        <h3 align="right">بيانات المستأجر</h3>
                        <table align="center" class="table table-bordered mt32" cellpadding="1" cellspacing="1"
                               style="width:100%;float: right; font-size:18px; border:2px solid black; margin-bottom:20px;" dir="rtl">
                            <tbody>
                                <tr style="height:18px;">
                                    <td style="height:18px; width:20%; border:2px solid black;">اسم المستأجر</td>
                                    <td style="height:18px; width:80%; border:2px solid black;"><span t-esc="o['partner_id'].partner_id.name"/></td>
                                </tr>
                               <tr style="height:18px;">
                                    <td style="height:18px; width:20%; border:2px solid black;">رقم الهوية </td>
                                    <td style="height:18px; width:80%; border:2px solid black;"><span t-esc="o['partner_id'].partner_id.national_id_number"/></td>
                                </tr>
                                <tr style="height:18px;">
                                    <td style="height:18px; width:20%; border:2px solid black;">ارقام التواصل الشخصي والعمل</td>
                                    <td style="height:18px; width:80%; border:2px solid black;"><span t-esc="o['partner_id'].partner_id.mobile"/></td>
                                </tr>
                                <tr style="height:18px;">
                                    <td style="height:18px; width:20%; border:2px solid black;">جهة العمل</td>
                                    <td style="height:18px; width:80%; border:2px solid black;"><span t-esc="o['employer']"/></td>
                                </tr>
                                <tr style="height:18px;">
                                    <td style="height:18px; width:20%; border:2px solid black;">الوظيفة</td>
                                    <td style="height:18px; width:80%; border:2px solid black;"><span t-esc="o['job']"/></td>
                                </tr>
                                <tr style="height:18px;">
                                    <td style="height:18px; width:20%; border:2px solid black;">تعريف بالراتب من العمل</td>
                                    <td style="height:18px; width:80%; border:2px solid black;"><span t-esc="o['salary_definition']"/></td>
                                </tr>
                                <tr style="height:18px;">
                                    <td style="height:18px; width:20%; border:2px solid black;">الحالة الاجتماعية</td>
                                    <td style="height:18px; width:80%; border:2px solid black;"><span t-esc="o['martial_status']"/></td>
                                </tr>
                                <tr style="height:18px;">
                                    <td style="height:18px; width:20%; border:2px solid black;">عدد أفراد العائلة</td>
                                    <td style="height:18px; width:80%; border:2px solid black;"><span t-esc="o['family_members']"/></td>
                                </tr>
                                <tr style="height:18px;">
                                    <td style="height:18px; width:20%; border:2px solid black;">تقرير سمة</td>
                                    <td style="height:18px; width:80%; border:2px solid black;"><span t-esc="o['simah_report']"/></td>
                                </tr>
                            </tbody>
                        </table>
                        <table align="center" class="table table-bordered mt32" cellpadding="1" cellspacing="1"
                               style="width:100%;float: right; font-size:18px; border:0px; margin-bottom:30px;" dir="rtl">
                            <tbody>
                                <tr style="height:18px;">
                                    <td style="height:18px; border:0px;">* التاكد من عدم وجود قضايا حقوقية بخصوص الايجار</td>
                                </tr>
                                <tr style="height:18px;">
                                    <td style="height:18px; border:0px;">* يجب ارفاق المستندات المؤيدة للمعلومات اعلاه</td>
                                </tr>
                            </tbody>
                        </table>

                        <table align="center" class="table table-bordered mt32" cellpadding="1" cellspacing="1"
                               style="width:100%;float: right; font-size:18px; margin-bottom:120px;" dir="rtl">
                            <tbody>
                                <tr style="height:18px;">
                                    <td style="height:18px; border:2px solid black;"></td>
                                    <td style="height:18px; border:2px solid black;">الاسم</td>
                                    <td style="height:18px; border:2px solid black;">الرأي</td>
                                    <td style="height:18px; border:2px solid black;">التوقيع</td>
                                </tr>
                                <tr style="height:18px;">
                                    <td style="height:18px; border:2px solid black;">مسؤول الإئتمان</td>
                                    <td style="height:18px; border:2px solid black;"><span t-esc="o['credit_officer']"/></td>
                                    <td style="height:18px; border:2px solid black;"><span t-esc="o['credit_officer_opinion']"/></td>
                                    <td style="height:18px; border:2px solid black;"></td>
                                </tr>
                                <tr style="height:18px;">
                                    <td style="height:18px; border:2px solid black;">مدير العقار</td>
                                    <td style="height:18px; border:2px solid black;"><span t-esc="o['property_manager']"/></td>
                                    <td style="height:18px; border:2px solid black;"><span t-esc="o['property_manager_opinion']"/></td>
                                    <td style="height:18px; border:2px solid black;"></td>
                                </tr>
                            </tbody>
                        </table>
                        <table align="center" class="table table-bordered mt32" cellpadding="1" cellspacing="1"
                               style="width:100%;float: right; font-size:18px; border:0px; margin-right:80px;" dir="rtl">
                            <tbody>
                                <tr style="height:18px;">
                                    <td style="height:18px; border:0px;" align="right">الرئيس التنفيذي</td>
                                </tr>
                                <tr style="height:18px;">
                                    <td style="height:18px; border:0px;" align="right">
                                        <p>
                                            <span>موافق</span>
                                            <t t-if="o.chief_executive">
                                                <input type="checkbox" id="oe_import_tracking" checked="checked"/>
                                            </t>
                                            <t t-if="not o.chief_executive">
                                                <input type="checkbox" id="oe_import_tracking"/>
                                            </t>
                                        </p>
                                    </td>
                                </tr>
                                 <tr style="height:18px;">
                                    <td style="height:18px; border:0px;" align="right">
                                        <p>
                                            <span>غير موافق</span>
                                            <t t-if="o.chief_executive_no">
                                                <input type="checkbox" id="oe_import_tracking" checked="checked"/>
                                            </t>
                                            <t t-if="not o.chief_executive_no">
                                                <input type="checkbox" id="oe_import_tracking"/>
                                            </t>
                                        </p>
                                    </td>
                                </tr>
                                <tr style="height:18px;">
                                    <td style="height:18px; border:0px;" align="center">
                                        التوقيع
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>