<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_request_quantities_form" model="ir.ui.view">
        <field name="name">stock.request.form</field>
        <field name="model">stock.request</field>
        <field name="arch" type="xml">
            <form string="Stock Request">
                <header>
                    <button string="Confirm" name="action_confirm" type="object" class="oe_highlight" states="approve" groups="stock_request.group_stock_request_confirm"/>
                    <button string="Approve" name="action_approve" type="object" class="oe_highlight" states="draft" groups="stock_request.group_stock_approve"/>
                    <button string="Cancel" name="action_cancel"
                            type="object" class="oe_highlight"
                            states="draft,approve,confirmed"
                            groups="stock_request.group_stock_request_manager"/>
                    <!-- <button string="Create Picking" type="object" class="oe_highlight" name="" groups="stock_request.group_stock_request_manager" states="confirmed"/> -->
                    <field name="state" force_save="1" widget="statusbar" statusbar_visible="draft,confirmed,done" />
                </header>
                <sheet>
                    <field name="fully_transfered" invisible="1"/>
                    <div class="oe_button_box" name="button_box">
                        <button type="object" name="action_view_picking" class="oe_stat_button" icon="fa-truck" attrs="{'invisible': [('delivery_count', '=', 0)]}">
                            <field name="delivery_count" widget="statinfo" string="Transfers"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="date_order" invisible="1"/>
                            <!-- <field name="employee_id"/> -->
                        </group>
                        <group >
                            <field name="date_quotation"/>
                            <field name="location_dest_id"
                                   domain="[('usage', '=', 'internal')]"
                                   attrs="{'required':[('state','=', 'confirmed')],'readonly':[('state', 'in', ['picking','done'])]}"/>
                            <field name="user_id" readonly="1" force_save="1"/>
                            <field name="check_state" invisible="1"/>
                        </group>
                    </group>
                    <notebook colspan="4">
                        <page string="Products">
                            <field name="lines" colspan="4" nolabel="1" attrs="{'readonly': [('state', '!=','draft')]}">
                                <tree string="Order lines"
                                      decoration-primary="qty_in_transfer > 0"
                                      decoration-success="transferred_qty > 0"
                                      editable="bottom">
                                    <field name="product_id"/>
                                    <field name="state" invisible="1"/>
                                    <button name="action_open_quants" type="object" title="History" attrs="{'invisible': [('state', 'in',('draft','done'))]}" icon="fa-bars" style="font-size: 1rem;" groups="stock_request.group_stock_request_manager"/>
                                    <button name="action_do_purchase" type="object" title="History" attrs="{'invisible': [('state', 'in',('draft','done'))]}" icon="fa-cart-arrow-down" style="font-size: 1.5rem;" groups="stock_request.group_stock_request_manager"/>
                                    <field name="request_qty"/>
                                    <field name="qty"  groups="stock_request.group_stock_approve"/>
                                    <field name="qty_in_transfer"/>
                                    <field name="transferred_qty"/>
                                    <field name="purchased_qty"/>
                                    <field name ="available_qty"/>
                                    <!-- <field name="transfer_status"/> -->
                                </tree>
                                <form string="Order lines">
                                    <group col="4">
                                        <field name="product_id"/>
                                        <field name="qty"/>
                                        <field name="transferred_qty"/>
                                        <field name="purchased_qty"/>
                                        <field name ="available_qty"/>
                                        <field name="state" invisible="1"/>
                                        <field name="notice"/>
                                        <field name="transfer_status"/>
                                    </group>
                                </form>
                            </field>
                            <div class="oe_clear"/>
                        </page>
                        <page string="Transfers">
                            <field name="transfer_ids">
                                <tree string="Transfers">
                                    <field name="name"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                            <div class="oe_clear"/>
                        </page>
                        <page string="Picking">
                            <field name="picking_ids">
                                <tree string="Picking">
                                    <field name="name"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                            <div class="oe_clear"/>
                        </page>
                        <page string="Purchase Orders">
                            <field name="order_ids">
                                <tree string="Orders">
                                    <field name="name"/>
                                    <!-- <field name="partner_id"/> -->
                                    <!-- <field name="date"/> -->

                                </tree>
                            </field>
                            <div class="oe_clear"/>
                        </page>
                        <page name="extra" string="Inventory Info" groups="stock_request.group_stock_request_manager">
                            <group string="Inventory">
                                <group>
                                    <!-- <field name="location_dest_id" attrs="{'required':[('state','=', 'confirmed')],'readonly':[('state', 'in', ['picking','done'])]}"/> -->
                                </group>
                            </group>
                        </page>
                        <page string="Notes">
                            <field name="note"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_request_quantities_tree" model="ir.ui.view">
        <field name="name">stock.request.tree</field>
        <field name="model">stock.request</field>
        <field name="arch" type="xml">
            <tree string="Stock Request"
                  default_order="date_quotation desc"
                  decoration-danger="state == 'draft'" decoration-success="state == 'confirmed'">
                <field name="name"/>
                <field name="location_dest_id"/>
                <field name="date_quotation"/>
                <field name="user_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_stock_request_filter" model="ir.ui.view">
        <field name="name">stock.request.select</field>
        <field name="model">stock.request</field>
        <field name="arch" type="xml">
            <search string="Search Request">
                <field name="name" string="Stock Request" filter_domain="['|', ('name', 'ilike', self), ('employee_id', 'ilike', self)]"/>
                <field name="date_quotation"/>
                <field name="employee_id"/>
                <filter string="Draft" name="new" domain="[('state', '=', 'draft')]" help="Draft Stock Requests"/>
                <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]" help="Confirmed Stock Requests"/>
                <filter string="Waiting" name="picking" domain="[('state', '=', 'picking')]" help="Waiting for picking Stock Requests"/>
                <filter string="Transfered" name="transfered" domain="[('state', '=', 'done')]" help="Transfered Stock Requests"/>
                <separator/>
                <filter string="Date" name="date_quotation" date="date_quotation"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Requester" name="requester" domain="[]" context="{'group_by': 'employee_id'}"/>
                    <filter string="Status" name="status" domain="[]" context="{'group_by': 'state'}"/>
                    <filter string="Date" name="by_date" domain="[]" context="{'group_by': 'date_quotation'}" help="Requests by Date"/>
                    <filter string="Source Location" name="location_src_id" domain="[]" context="{'group_by': 'location_src_id'}" />
                    <filter string="Destination Location" name="location_dest_id" domain="[]" context="{'group_by': 'location_dest_id'}" />

                </group>
            </search>
        </field>
    </record>


    <record id="action_request_quantities_form" model="ir.actions.act_window">
        <field name="name">Stock Request</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">stock.request</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_stock_request_filter"/>
        <field name="view_id" eval="False"/>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new order.
            </p>
            <p>
            Use this menu to browse previous quotations. To record new
            quotations, you may use the menu <i>Your Session</i> for
            the touchscreen interface.
            </p>
        </field>
    </record>
</odoo>
