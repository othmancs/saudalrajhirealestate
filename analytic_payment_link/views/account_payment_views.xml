<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_payment_form_inherit" model="ir.ui.view">
        <field name="name">account.payment.form.inherit</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <!-- إضافة حقول أمر المبيعات -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="sale_order_id" 
                       attrs="{'invisible': [('payment_type', '=', 'transfer')]}"/>
                <field name="available_invoice_ids" invisible="1"/>
            </xpath>

            <!-- إضافة قسم فواتير الدفع -->
            <xpath expr="//sheet" position="before">
                <group string="فواتير الدفع" attrs="{'invisible': [('payment_type', '=', 'transfer')]}">
                    <field name="payment_invoice_line_ids" context="{'form_view_ref': 'analytic_payment_link.view_payment_invoice_line_form'}">
                        <tree editable="bottom" create="1">
                            <field name="invoice_id"/>
                            <field name="invoice_amount_residual" readonly="1"/>
                            <field name="amount" readonly="1"/>
                            <field name="analytic_account_id"/>
                            <field name="analytic_tag_ids" widget="many2many_tags"/>
                        </tree>
                    </field>
                </group>
            </xpath>
        </field>
    </record>

    <record id="view_payment_invoice_line_form" model="ir.ui.view">
        <field name="name">payment.invoice.line.form</field>
        <field name="model">payment.invoice.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="invoice_id" domain="[('id', 'in', parent.available_invoice_ids)]"/>
                        <field name="invoice_amount_residual" readonly="1"/>
                        <field name="amount" readonly="1"/>
                        <field name="analytic_account_id"/>
                        <field name="analytic_tag_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
