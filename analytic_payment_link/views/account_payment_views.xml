<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_payment_form_inherit" model="ir.ui.view">
        <field name="name">account.payment.form.inherit</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="analytic_account_id" attrs="{'invisible': [('payment_type', '=', 'transfer')]}"/>
                <field name="analytic_tag_ids" attrs="{'invisible': [('payment_type', '=', 'transfer')]}"/>
                <field name="sale_order_id" 
                       domain="[('partner_id', '=', partner_id), ('state', 'in', ['sale', 'done'])]"
                       attrs="{'invisible': [('payment_type', '=', 'transfer')]}"/>
            </xpath>
            
            <xpath expr="//field[@name='amount']" position="after">
                <field name="payment_invoice_line_ids" 
                       attrs="{'invisible': [('payment_type', '=', 'transfer')]}">
                    <tree editable="bottom">
                        <field name="invoice_id" 
                               domain="[('partner_id', '=', parent.partner_id), ('move_type', 'in', ['out_invoice', 'out_refund']), ('state', '=', 'posted'), ('sale_order_id', '=', parent.sale_order_id)]"/>
                        <field name="amount"/>
                        <field name="analytic_account_id"/>
                        <field name="analytic_tag_ids" widget="many2many_tags"/>
                    </tree>
                </field>
            </xpath>
        </field>
    </record>
    
    <!-- عرض منفصل لخطوط فواتير الدفع -->
    <record id="view_payment_invoice_line_form" model="ir.ui.view">
        <field name="name">payment.invoice.line.form</field>
        <field name="model">payment.invoice.line</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="invoice_id"/>
                    <field name="amount"/>
                    <field name="analytic_account_id"/>
                    <field name="analytic_tag_ids" widget="many2many_tags"/>
                </group>
            </form>
        </field>
    </record>
</odoo>
