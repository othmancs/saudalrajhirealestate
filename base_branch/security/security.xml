<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="group_branch_manager" model="res.groups">
            <field name="name">Branch Manager</field>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record id="branch_multi_company_rule" model="ir.rule">
            <field name="name">Branch Multi Company</field>
            <field ref="model_branch_branch" name="model_id"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
        </record>

    </data>
</odoo>
