<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_branch_config_form" model="ir.ui.view">
            <field name="name">branch.branch.form</field>
            <field name="model">branch.branch</field>
            <field name="arch" type="xml">
                <form string="Branches">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" string="Users" name="action_view_users" type="object"
                                    icon="fa-male"/>
                            <button class="oe_stat_button" string="Allow Users" name="action_view_allow_users"
                                    type="object" icon="fa-list"/>
                        </div>
                        <group name="main_group">
                            <group string="Branches">
                                <field name="name" required="1" />
                                <field name="short_code" required="1"/>
                            </group>
                            <group string="Address">
                                <label for="street" string="Address"/>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street"/>
                                    <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                    <field name="city" placeholder="City" class="o_address_city"/>
                                    <field name="state_id" class="o_address_state" placeholder="State"
                                           options="{&quot;no_open&quot;: True}"/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country"
                                           options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                </div>
                            </group>

                        </group>
                        <notebook>
                            <page string="General Info" name="general">
                                <group name="sequence_group" string="Sequences">
                                    <field name="partner_sequence_id"/>
                                </group>
                                <group string="Company" groups="base.group_multi_company">
                                    <field name="company_id"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="branch_branch_view_kanban" model="ir.ui.view">
            <field name="name">branch.branch.kanban</field>
            <field name="model">branch.branch</field>
            <field name="arch" type="xml">
                <kanban class="oe_background_grey o_kanban_dashboard o_hr_department_kanban" sample="1">
                    <field name="id"/>
                    <field name="color"/>
                    <field name="name"/>
                    <field name="short_code"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="#{kanban_color(record.color.raw_value)} oe_kanban_global_click o_has_icon oe_kanban_content oe_kanban_card">
                                <div class="oe_kanban_global_click oe_kanban_content">
                                    <div class="oe_kanban_details d-flex flex-column">
                                        <div class="o_kanban_record_top mb16">
                                            <div>
                                                <strong>
                                                    <field name="name" class="text-muted"/>
                                                </strong>
                                            </div>
                                        </div>
                                        <div>
                                            <ul>
                                                <li class="badge badge-pill" t-if="record.short_code.value">
                                                    <field name="short_code"/>
                                                </li>
                                            </ul>
                                        </div>
                                        <span class="">
                                            <i class="fa fa-fw fa-map" role="img" aria-label="City"
                                               t-if="record.city.value"/>
                                            <field name="city"/>
                                        </span>
                                        <br/>
                                    </div>
                                </div>
                                <div class="o_dropdown_kanban dropdown">
                                    <a role="button" class="dropdown-toggle o-no-caret btn" data-toggle="dropdown"
                                       data-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                        <span class="fa fa-ellipsis-v"/>
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <t t-if="widget.editable">
                                            <a role="menuitem" type="edit" class="dropdown-item">Edit...</a>
                                        </t>
                                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <record id="view_branch_configuration_tree" model="ir.ui.view">
            <field name="name">branch.branch.tree</field>
            <field name="model">branch.branch</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="short_code"/>
                </tree>
            </field>
        </record>

        <record id="branch_configuration_action" model="ir.actions.act_window">
            <field name="name">Branches Configuration</field>
            <field name="res_model">branch.branch</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>

        <menuitem name="Branches" sequence="8" web_icon="base_branch,static/description/icon.png"
                  id="branch_configuration_menu_root"/>

        <menuitem name="Branches" sequence="8" action="branch_configuration_action"
                  groups="base_branch.group_branch_manager" parent="branch_configuration_menu_root"
                  id="branch_configuration_menu_internal"/>
        <menuitem name="Reports" sequence="8" groups="base_branch.group_branch_manager"
                  parent="branch_configuration_menu_root" id="branch_report_menu"/>

    </data>
</odoo>