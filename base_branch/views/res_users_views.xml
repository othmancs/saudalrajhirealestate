<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_res_users_inherit" model="ir.ui.view">
            <field name="name">Inherited Users</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[2]" position="after">
                    <page string="Branch Config">
                        <group string="Basic Config">
                            <group>
                                <field name="branch_id" options="{'no_create':True,'no_open':True}"/>
                            </group>
                        </group>

                        <group string="Permission Config">
                            <group name="allowed_branches">
                                <field name="allowed_branches" widget="many2many_tags"/>
                            </group>
                            <group name="see_other_group">
                                <field name="allowed_see_other_customers"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
