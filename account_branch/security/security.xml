<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="branch_user_see_own_invoice" model="res.groups">
            <field name="name">Branch User See Own Invoice</field>
        </record>

        <record id="payment_branch_rule" model="ir.rule">
            <field name="name">See Only Branch Payments</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="domain_force">['|', '|', ('branch_id', 'in', user.allowed_branches.ids), ('branch_id', '=',
                False),
                (user.allowed_see_other_payments, '=', True)]
            </field>
        </record>

        <record id="move_branch_rule" model="ir.rule">
            <field name="name">See Only Branch Invoice </field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="domain_force">['|', '|', ('branch_id', 'in', user.allowed_branches.ids), ('branch_id', '=', False),
                (user.allowed_see_other_invoice, '=', True)]
            </field>
        </record>

    </data>
</odoo>
