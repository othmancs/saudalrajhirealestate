<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit branch form view -->
        <record id="view_branch_config_form_inherit" model="ir.ui.view">
            <field name="name">branch.branch.form.inherit</field>
            <field name="model">branch.branch</field>
            <field name="inherit_id" ref="base_branch.view_branch_config_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_stat_button" string="Moves" name="action_view_moves" type="object"
                            icon="fa-euro">
                    </button>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Accounting" name="">
                        <group string="Journals">
                            <field name="bank_cash_journal_ids" domain="[('type','in',('bank','cash'))]"
                                   widget="many2many_tags"/>
                            <field name="default_cash_journal_id" />
                            <field name="default_sale_journal_id" />
                            <field name="default_purchase_journal_id"/>
                        </group>
                    </page>

                </xpath>
            </field>
        </record>

    </data>
</odoo>
