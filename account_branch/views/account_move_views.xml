<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Account move view form -->
        <record id="view_move_form" model="ir.ui.view">
            <field name="name">Inherited move</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="branch_id" options="{'no_create':True,'no_open':True}" required="1"/>
                </xpath>

                <xpath expr="//button[@name='button_cancel'][1]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//button[@name='button_cancel'][2]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//notebook/page/field[@name='line_ids']/tree/field[@name='company_currency_id']"
                       position="after">
                    <field name="branch_id" options="{'no_create':True,'no_open':True}"/>
                </xpath>

                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']"
                       position="attributes">
                    <attribute name="domain">['|', ('branch_id', '=', parent.branch_id), ('branch_id', '=', False)]
                    </attribute>
                </xpath>

                <xpath expr="//field[@name='partner_id']"
                       position="attributes">
                    <attribute name="domain">['|', ('branch_id', '=', branch_id), ('branch_id', '=', False)]</attribute>
                    <attribute name="context">{'res_partner_search_mode': (context.get('default_move_type', 'entry') in
                        ('out_invoice', 'out_refund', 'out_receipt') and 'customer') or
                        (context.get('default_move_type', 'entry') in ('in_invoice', 'in_refund', 'in_receipt') and
                        'supplier') or False,
                        'show_address': 1, 'default_is_company': True, 'show_vat': True, 'default_branch_id': branch_id}
                    </attribute>
                </xpath>

            </field>
        </record>

        <!-- Account move tree -->
        <record id="view_move_tree" model="ir.ui.view">
            <field name="name">account.move.tree</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='name']" position="after">
                    <field name="branch_id"/>
                </xpath>

            </field>
        </record>

        <!-- Account invoice tree -->
        <record id="view_invoice_tree" model="ir.ui.view">
            <field name="name">account.move.tree</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='name']" position="after">
                    <field name="branch_id"/>
                </xpath>

            </field>
        </record>

        <!-- Account move line tree -->
        <record id="view_move_line_tree" model="ir.ui.view">
            <field name="name">account.move.line.tree</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree"/>
            <field eval="100" name="priority"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="branch_id"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
