<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Maintenance Request View Form -->
        <record id="maintenance_request_view_form" model="ir.ui.view">
            <field name="name">maintenance.request.view.form</field>
            <field name="model">maintenance.request</field>
            <field name="arch" type="xml">
                <form string="Maintenance Request">
                    <header>
                        <button type="object" name="action_confirm"
                            groups="real_estate_maintenance.group_maintenance_manager"
                            string="Confirm" class="oe_highlight" states="new" />
                        <button type="object" name="action_ongoing" string="Start"
                            class="oe_highlight"
                            states="confirm" />
                        <button type="object" name="action_close" string="Close"
                            class="oe_highlight" states="ongoing" />
                        <button type="object" name="action_refuse"
                            groups="real_estate_maintenance.group_maintenance_manager"
                            string="Refuse" class="oe_highlight" states="new" />
                        <field name="customer_invoice_id" invisible="1" />
                        <button type="object" name="action_create_invoice" string="Create Invoice"
                            class="oe_highlight"
                            attrs="{'invisible': ['|', '|', ('invoice_status', '=', 'on-company'), ('customer_invoice_id', '!=', False), ('state', '!=', 'closed')]}" />
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <div name="button_box" class="oe_button_box">
                            <field name="stock_picking_ids" invisible="1" />
                            <button class="oe_stat_button"
                                type="object" name="action_view_stock_pickings"
                                icon="fa-truck">
                                <field string="Pickings" name="stock_pickings_count"
                                    widget="statinfo" />
                            </button>
                            <field name="account_move_ids" invisible="1" />
                            <button class="oe_stat_button"
                                type="object" name="action_view_invoices"
                                icon="fa-money">
                                <field string="Invoices &amp; Bills" name="account_moves_count"
                                    widget="statinfo" />
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="request_date" required="1"
                                    attrs="{'readonly': [('state', 'in', ('closed', 'refused'))]}" />
                                <field name="visit_date"
                                    attrs="{'readonly': [('state', 'in', ('closed', 'refused'))]}" />
                            </group>
                            <group>
                                <field name="operating_unit_id" required="1"
                                    attrs="{'readonly': [('state', 'in', ('closed', 'refused'))]}" />
                                <field name="property_rent_id"
                                    domain="[('property_address_area', '=', operating_unit_id)]"
                                    required="1"
                                    attrs="{'readonly': [('state', 'in', ('closed', 'refused'))]}" />
                                <field name="property_id"
                                    domain="[('property_id', '=', property_rent_id)]" required="1"
                                    attrs="{'readonly': [('state', 'in', ('closed', 'refused'))]}" />
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="requester_id"
                                    attrs="{'readonly': [('state', 'in', ('closed', 'refused'))]}" />
                                <field name="issue_type"
                                    attrs="{'readonly': [('state', 'in', ('closed', 'refused'))]}" />
                                <field name="invoice_status"
                                    attrs="{'readonly': [('state', 'in', ('closed', 'refused'))]}" />
                                <field name="maintenance_responsible_id"
                                    attrs="{'readonly': [('state', 'in', ('closed', 'refused'))]}" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Consumed Products"
                                attrs="{'invisible': [('state', 'in', ('new'))]}"
                                name="consumed_products">
                                <field name="maintenance_request_product_line_ids"
                                    attrs="{'readonly': [('state', 'in', ('closed', 'refused'))]}">
                                    <tree editable="bottom">
                                        <field name="product_id" />
                                        <field name="location_id" />
                                        <field name="quantity" />
                                    </tree>
                                </field>
                            </page>
                            <page string="Expenses"
                                attrs="{'invisible': [('state', 'in', ('new'))]}"
                                name="expenses">
                                <field name="maintenance_request_expense_line_ids"
                                    attrs="{'readonly': [('state', 'in', ('closed', 'refused'))]}">
                                    <tree editable="bottom">
                                        <field name="partner_id" />
                                        <field name="product_id" />
                                        <field name="quantity" />
                                        <field name="price_unit" />
                                        <field name="tax_ids" widget="many2many_tags" />
                                    </tree>
                                </field>
                            </page>
                            <page string="Issue Description" name="issue_description">
                                <field name="issue_description"
                                    widget="text"
                                    readonly="1" />
                            </page>
                            <page string="Refuse Justification" name="refuse_justification">
                                <field name="refuse_reason"
                                    widget="text"
                                    readonly="1" />
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="activity_ids" widget="mail_activity" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

        <!-- Maintenance Request Search -->
        <record id="maintenance_request_view_search" model="ir.ui.view">
            <field name="name">maintenance.request.view.search</field>
            <field name="model">maintenance.request</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <group>
                        <field name="name"
                            filter_domain="['|', ('name', 'ilike', self), '|', ('property_id', 'ilike', self), ('requester_id', 'ilike', self)]"
                            string="Maintenance Request" />
                        <filter string="Confirmed" name="state_confirmed"
                            domain="[('state', '=', 'confirm')]" />
                        <filter string="New" name="state_new" domain="[('state', '=', 'new')]" />
                        <filter string="Archived" name="state_archived"
                            domain="[('active', '=', False)]" />
                        <filter string="Ongoing" name="state_ongoing"
                            domain="[('state', '=', 'ongoing')]" />
                        <filter string="Closed" name="state_closed"
                            domain="[('state', '=', 'closed')]" />

                    </group>
                </search>
            </field>
        </record>

        <!-- Maintenance Request View Tree -->
        <record id="maintenance_request_view_tree" model="ir.ui.view">
            <field name="name">maintenance.request.view.tree</field>
            <field name="model">maintenance.request</field>
            <field name="arch" type="xml">
                <tree string="Maintenance Request">
                    <field name="name" />
                    <field name="property_id" />
                    <field name="requester_id" />
                    <field name="request_date" />
                    <field name="visit_date" />
                    <field name="issue_type" />
                    <field name="invoice_status" />
                    <field name="maintenance_responsible_id" />
                    <field name="state" />
                </tree>
            </field>
        </record>


