        <!-- Maintenance Request Action -->
        <record id="maintenance_request_act_window" model="ir.actions.act_window">
            <field name="name">Maintenance Requests</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">maintenance.request</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There are no maintenance requests
                </p>
            </field>
        </record>

        <!-- Main Menu Item -->
        <menuitem id="real_estate_maintenance_menu_root"
            action="maintenance_request_act_window"
            web_icon="real_estate_maintenance,static/description/icon.png"
            name="Real Estate Maintenance" sequence="70" />

        <!-- Menu Item -->
        <menuitem id="real_estate_maintenance_menu_request"
            parent="real_estate_maintenance_menu_root"
            action="maintenance_request_act_window"
            name="Maintenance Requests" sequence="70" />
    </data>
</odoo>