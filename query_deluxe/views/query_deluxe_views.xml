<?xml version="1.0"?>
<odoo>

    <!-- Tree View for querydeluxe -->
    <record id="query_deluxe_view_tree" model="ir.ui.view">
        <field name="name">Type a query tree</field>
        <field name="model">querydeluxe</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Query"/>
            </tree>
        </field>
    </record>

    <!-- Form View for querydeluxe -->
    <record id="query_deluxe_view_form" model="ir.ui.view">
        <field name="name">Type a query form</field>
        <field name="model">querydeluxe</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="print_result" string="Print PDF" type="object"
                            style="color: blue !important"/>
                </header>

                <sheet>
                    <group string="Examples">
                        <group>
                            <field name="tips" widget="selection"/>
                            <button name="copy_query" type="object" style="color:green" string="Copy"/>
                        </group>
                        <group>
                            <field name="tips_description"/>
                        </group>
                    </group>

                    <group string="Type a query">
                        <field name="name" nolabel="1" placeholder="SELECT * FROM res_partner"/>
                    </group>

                    <button name="execute" type="object" string="Execute" class="btn btn-primary"/>

                    <group>
                        <field name="rowcount" readonly="1"/>
                        <field name="html" readonly="1"/>
                    </group>

                    <group>
                        <field name="show_raw_output"/>
                        <field name="raw_output"/>
                    </group>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for querydeluxe -->
    <record model="ir.actions.act_window" id="query_deluxe_submenu_querydeluxe_action">
        <field name="name">Queries</field>
        <field name="res_model">querydeluxe</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Tree View for tipsqueries -->
    <record id="tips_queries_view_tree" model="ir.ui.view">
        <field name="name">Memorize a query tree</field>
        <field name="model">tipsqueries</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name" string="Query"/>
                <field name="description" string="Description"/>
            </tree>
        </field>
    </record>

    <!-- Search View for tipsqueries -->
    <record id="tips_queries_view_search" model="ir.ui.view">
        <field name="name">Search a query</field>
        <field name="model">tipsqueries</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="description"/>
            </search>
        </field>
    </record>

    <!-- Action for tipsqueries -->
    <record model="ir.actions.act_window" id="query_deluxe_submenu_tipsqueries_action">
        <field name="name">Examples</field>
        <field name="res_model">tipsqueries</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree</field>
    </record>

    <!-- Menus -->
    <menuitem id="query_deluxe_menu" name="Query Deluxe" sequence="-1"
              groups="query_deluxe.group_query_deluxe"
              web_icon="query_deluxe,static/description/icon.png"/>

    <menuitem id="query_deluxe_submenu_querydeluxe"
              parent="query_deluxe_menu"
              action="query_deluxe_submenu_querydeluxe_action"
              sequence="-1"
              groups="query_deluxe.group_query_deluxe"/>

    <menuitem id="query_deluxe_submenu_tipsqueries"
              parent="query_deluxe_menu"
              action="query_deluxe_submenu_tipsqueries_action"
              sequence="10"
              groups="query_deluxe.group_query_deluxe"/>

</odoo>
