<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Wizard Form View -->
        <record id="view_rental_report_wizard_form" model="ir.ui.view">
            <field name="name">rental.report.wizard.form</field>
            <field name="model">rental.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Generate Rental Report">
                    <sheet>
                        <group>
                            <field name="company_id" required="1"/>
                            <field name="operating_unit_id"/>
                            <field name="property_address_build"/>
                            <field name="property_id"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="generate_report" string="Generate Report" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Action to open the wizard -->
        <record id="action_rental_report_wizard" model="ir.actions.act_window">
            <field name="name">Generate Rental Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">rental.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!-- Menu Item -->
        <menuitem id="menu_rental_reports" name="Rental Reports" parent="property_management.menu_property_main" sequence="20"/>
        <menuitem id="menu_rental_report_wizard" name="Generate Rental Report" parent="menu_rental_reports" action="action_rental_report_wizard" sequence="10"/>
    </data>
</odoo>