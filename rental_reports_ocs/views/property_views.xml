<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Property Views -->
        <record id="view_rent_property_tree" model="ir.ui.view">
            <field name="name">rent.property.tree</field>
            <field name="model">rent.property</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="operating_unit_id"/>
                    <field name="address"/>
                    <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                </tree>
            </field>
        </record>

        <record id="view_rent_property_form" model="ir.ui.view">
            <field name="name">rent.property.form</field>
            <field name="model">rent.property</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="operating_unit_id"/>
                            <field name="address"/>
                        </group>
                        <notebook>
                            <page string="Elevators">
                                <field name="elevators">
                                    <tree editable="bottom">
                                        <field name="elevator_number_name"/>
                                        <field name="elevator_maintenance_date"/>
                                        <field name="elevator_maintenance_value"/>
                                        <field name="elevator_maintenance_description"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Property Actions -->
        <record id="action_rent_property" model="ir.actions.act_window">
            <field name="name">Rental Properties</field>
            <field name="res_model">rent.property</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu Items -->
        <menuitem id="menu_property_main" name="Property Management" sequence="10"/>
        <menuitem id="menu_property" name="Properties" parent="menu_property_main" action="action_rent_property" sequence="10"/>
    </data>
</odoo>
