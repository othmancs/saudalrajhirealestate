<?xml version="1.0" encoding="UTF-8"?>
<t t-name="rental_reports_ocs.rental_report_template_xml">
    <t t-call="web.basic_layout">
        <t t-foreach="docs" t-as="doc">
            <rentalReport>
                <company t-esc="doc.company_id.name"/>
                <operatingUnit t-esc="doc.operating_unit_id.name"/>
                <property t-esc="doc.property_id.name"/>
                <units>
                    <t t-foreach="doc.search([])" t-as="unit">
                        <unit>
                            <unitNumber t-esc="unit.name"/>
                            <tenant t-esc="unit.partner_id.name"/>
                            <contractNumber t-esc="unit.last_sale_id.name"/>
                            <status t-esc="unit.state_id.name"/>
                            <amountPaid t-esc="unit.amount_paid"/>
                            <amountDue t-esc="unit.amount_due"/>
                            <totalContract t-esc="unit.contract_total"/>
                            <startDate t-esc="unit.fromdate"/>
                            <endDate t-esc="unit.todate"/>
                        </unit>
                    </t>
                </units>
            </rentalReport>
        </t>
    </t>
</t>
