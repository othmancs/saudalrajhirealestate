<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="report_template_view_form" model="ir.ui.view">
            <field name="name">report_template_view_form</field>
            <field name="model">report.template</field>
            <field name="arch" type="xml">
                <form string="report_template_form">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Template"/>
                            <h1>
                                <field name="name" placeholder="Report Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="model_id"/>
                            </group>
                            <group>
                                <field name="template_type" invisible="1"/>
                                <field name="code"/>
                                <field name="template" class="oe_inline" filename="template_filename"/>
                                <field name="template_filename" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="mapping_ids" string="Mapping">
                                <field name="mapping_ids" context="{'default_model_id': model_id}">
                                    <tree editable="bottom">
                                        <field name="model_id" invisible="1"/>
                                        <field name="placeholder"/>
                                        <field name="field_id"
                                               options="{'no_create_edit': True,'no_create':True,'no_open':True}"
                                               attrs="{'required': [('print_date', '=', False)]}"/>

                                        <field name="relation" invisible="1"/>
                                        <field name="field_readonly" invisible="1"/>
                                        <field name="related_field_id"
                                               attrs="{'readonly': [('field_readonly', '=', True)],'required': [('field_readonly', '=', False)]}"/>
                                        <field name="print_date"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="report_template_view_tree" model="ir.ui.view">
            <field name="name">report_template_view_tree</field>
            <field name="model">report.template</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="model_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>


        <record id="report_template_action" model="ir.actions.act_window">
            <field name="name">Report Template</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">report.template</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="report_template_menu" name="Dynamic Report" web_icon="dynamic_report,static/description/icon.png"
                  action="report_template_action" sequence="999"/>
    </data>
</odoo>