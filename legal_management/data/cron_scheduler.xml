<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <!-- noupdate="0"  -->
    <data  >
        <record id="ir_cron_scheduler_recurring_action" model="ir.cron">
            <field name="name">123 Recurring Todo Activity</field>
            <field name="model_id" ref="model_contract"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="state">code</field>
            <field name="code">model.notify_contract()</field>

        </record>

        <record id="notify_upcoming_and_overdue_contract_cron" model="ir.cron">
            <field name="name">Notification For Upcoming and Overdue Contracts</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="state">code</field>
            <field name="code">model.notify_upcoming_overdue_contract()</field>
        </record>

    </data>

</odoo>