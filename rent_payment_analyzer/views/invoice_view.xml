<odoo>
    <record id="view_move_form_inherit" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='operating_unit_id']" position="after">
                <field name="pending_invoices_count" widget="integer"/>
                <field name="pdf_analysis_status" invisible="1"/>
            </xpath>

            <!-- Add button to manually trigger analysis -->
            <xpath expr="//sheet" position="before">
                <div class="oe_button_box" name="button_box">
                    <button name="analyze_pdf_attachments"
                            type="object"
                            string="Analyze PDF"
                            class="oe_stat_button"
                            icon="fa-file-pdf-o"
                            attrs="{'invisible': [('attachment_ids', '=', False)]}"/>
                </div>
            </xpath>
        </field>
    </record>
    <!-- في views/invoice_view.xml -->
    <record id="view_account_move_tree_inherit" model="ir.ui.view">
        <field name="name">account.move.tree.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <button name="analyze_pdf_attachments"
                        type="object"
                        string="Analyze PDF"
                        class="btn-secondary"
                        icon="fa-file-pdf-o"
                        attrs="{'invisible': [('attachment_ids', '=', False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>